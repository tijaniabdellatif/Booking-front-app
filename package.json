{
  "name": "booking",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    
    "Mode-production":"==============Branch Prod==============",

    "watch:sass:prod": "node-sass sass/main.scss css/style.css -w",
    "server:prod": "live-server --port=8181 --browser=chrome",
    "start:prod": "concurrently  \"npm run server:prod\" \"npm run watch:sass\"",
    "compress:css": "node-sass css/style.prefix.css css/style.css --output-style compressed",
    "building-prod": "npm-run-all compress:css",

    "fin-production":"===========================================",

      
    "Mode-dev":"==============Branch dev==============",
    

     "watch-dev" : "node-sass sass/main.scss css/style.prefix.css -w",
     "start:dev" : "concurrently  \"npm run server:prod\" \"npm run watch-dev\"",
     "compiler:sass": "node-sass sass/main.scss css/style.comp.css",
     "concat:css": "concat -o css/style.concat.css css/all.css css/style.comp.css",
     "prefix:css": "postcss css/style.prefix.css --use autoprefixer -o css/style.concat.css",
     "building-dev": "npm-run-all compiler:sass concat:css prefix:css",

    "fin-dev":"==============Branch dev==============",



    "deploying":"==============Branch Prod==============",


    "watch-deploy" : "node-sass sass/main.scss css/style.css -w",
    "start:deploy" : "concurrently  \"npm run server:prod\" \"npm run watch-deploy\"", 
    "deploying-app": "npm-run-all building-dev building-prod",

    "fin-deploying":"==============Branch dev=============="

    
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^9.7.4",
    "concat": "^1.0.3",
    "concurrently": "^5.1.0",
    "live-server": "^1.2.1",
    "node-sass": "^4.13.1",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.0"
  },
  "browserslist": [
    "defaults",
    "last 3 versions"
  ]
}
